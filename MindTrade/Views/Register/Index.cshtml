@{
    Layout = "_LayoutCompacto";
    ViewData["Title"] = "Cadastro";
}

<!--index css-->
<link rel="stylesheet" href="~/css/usuario/login.css" asp-append-version="true" />
<!--bootstrap-->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<!--js-->
<script src="~/js/login_signIn/register.js"></script>

<div class="container-md p-0">
    <div class="register_block">
        <a class="back" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fa-solid fa-xmark"></i>
        </a>

        <div class="switch">
            <a class="login_btn" asp-area="" asp-controller="Login" asp-action="Index">
                <span>Login</span>
            </a>
            <a class="cadastro_btn" asp-area="" asp-controller="Register" asp-action="Index">
                <span>Cadastro</span>
            </a>
        </div>

        <section class="cadastro">
            <h1>Cadastre-se</h1>
            <form>
                <label for="text" class="mt-3 mb-1 label">Nome</label>
                <div class="mb-2 dados_container">
                    <input type="text" class="dados_subcontainer" id="" aria-describedby="emailHelp">
                </div>

                <label for="email" class="mb-1 label">Email</label>
                <div class="mb-2 dados_container">
                    <input type="email" class="dados_subcontainer" id="" aria-describedby="emailHelp">
                </div>

                <label for="password" class="mb-1 label">Senha</label>
                <div class="mb-2 dados_container">
                    <input type="password" class="dados_subcontainer" id="exampleInputPassword1">
                </div>


                <label for="password" class="mb-1 label">Confirme a senha</label>
                <div class="mb-3 dados_container">
                    <input type="password" class="dados_subcontainer" id="exampleInputPassword1">
                </div>

                <button type="submit" class="submit_btn">Cadastre-se</button>
            </form>
        </section>
    </div>

    <div class="login_image">
        <img class="" src="~/images/index/mindtrade-student.png" alt="">
    </div>
</div>
